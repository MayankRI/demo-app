{
  "name": "hex-market",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:pro": "npm i --production && npm run build && pm2 start dist/main.js --name=api --node-args='-r ./tsconfig-paths-bootstrap.js'",
    "start:staging": "npm i --development && npm run build && pm2 start dist/main.js --name=api --node-args='-r ./tsconfig-paths-bootstrap.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.8.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^6.8.0",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.8.0",
    "@nestjs/schedule": "^1.1.0",
    "@nestjs/swagger": "^3.1.0",
    "@types/cron": "^1.7.3",
    "@types/mongoose": "^5.5.18",
    "await-to-js": "^2.1.1",
    "axios": "^0.26.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.1",
    "compression": "^1.7.4",
    "dotenv": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.3",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "nest-router": "^1.0.9",
    "nest-schedule": "^0.6.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.1",
    "tsconfig-paths": "3.9.0",
    "web3": "^1.7.3",
    "xhelper": "^2.2.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.8.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "5.20.0",
    "typescript": "^3.6.3",
    "wait-on": "^3.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
